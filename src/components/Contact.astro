---
import { Image } from "astro:assets";
import { QUOTE, SITE_TITLE } from "@/consts";
---

<div
  class="fixed top-0 -z-10 !w-screen md:block h-screen bg-cover bg-center tracking-wide"
  style="background-image: url('/surpgio_background.png');"
></div>

<section
  class="flex-1 w-full !z-[20] relative flex items-start justify-center pt-8 overflow-auto"
  id="hero"
>
    <div 
      class="mt-8 text-center max-w-6xl p-12 rounded-lg text-white"
      style="
        background: linear-gradient(to bottom, rgba(108, 92, 231, 0.7), rgba(72, 61, 156, 0.7));
      "
    >
      <script type="module">
        let form = null;
        let submitted = false;
        window.addEventListener('DOMContentLoaded', () => {
          form = document.querySelector('form[name="contact"]');
          if (form) {
            form.addEventListener('submit', function(e) {
              e.preventDefault();
              form.style.display = "none";
              document.getElementById('contact-thankyou').style.display = "block";
              form.submit(); // Let Netlify handle the actual submission
            });
          }
        });
      </script>
      <form 
        name="contact"
        netlify
        class="flex flex-col gap-6 w-full max-w-4xl mx-auto"
      >
        <div class="flex flex-col md:flex-row gap-6">
          <div class="flex-1">
            <label for="name" class="block text-left mb-1 text-base" style="color: #dfe6e9;">Name</label>
            <input id="name" name="name" type="text" required class="w-full px-3 py-2 rounded bg-[#22223b] text-[#dfe6e9] border border-[#636e72] focus:outline-none focus:ring-2 focus:ring-[#6c5ce7]" />
          </div>
          <div class="flex-1">
            <label for="email" class="block text-left mb-1 text-base" style="color: #dfe6e9;">Email</label>
            <input id="email" name="email" type="email" required class="w-full px-3 py-2 rounded bg-[#22223b] text-[#dfe6e9] border border-[#636e72] focus:outline-none focus:ring-2 focus:ring-[#6c5ce7]" />
          </div>
        </div>
        <div>
          <label for="subject" class="block text-left mb-1 text-base" style="color: #dfe6e9;">Subject</label>
          <input id="subject" name="subject" type="text" required class="w-full px-3 py-2 rounded bg-[#22223b] text-[#dfe6e9] border border-[#636e72] focus:outline-none focus:ring-2 focus:ring-[#6c5ce7]" />
        </div>
        <div>
          <label for="message" class="block text-left mb-1 text-base" style="color: #dfe6e9;">Message</label>
          <textarea id="message" name="message" rows="5" required class="w-full px-3 py-2 rounded bg-[#22223b] text-[#dfe6e9] border border-[#636e72] focus:outline-none focus:ring-2 focus:ring-[#6c5ce7]"></textarea>
        </div>
        <button type="submit" class="mt-2 px-6 py-2 rounded bg-[#55efc4] text-[#22223b] font-bold hover:bg-[#00b894] transition">Send</button>
      </form>
      <div id="contact-thankyou" style="display:none;" class="text-2xl font-bold text-[#55efc4] py-12">
        Thank you for reaching out! We will get back to you ASAP.
      </div>
    </div>
</section>



