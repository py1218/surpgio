---
import { Image } from "astro:assets";
import { QUOTE, SITE_TITLE } from "@/consts";
---

<div
  class="fixed inset-0 -z-10 bg-cover bg-center"
  style="background-image:url('/surpgio_background.png');"
></div>


<section
  id="hero"
  class="relative w-full flex flex-col items-center justify-center px-4 sm:px-6 py-8 sm:py-10 min-h-[80dvh] md:min-h-[70dvh] overflow-visible"
>
  <div
    class="w-full max-w-3xl rounded-2xl text-white flex flex-col justify-center shadow-xl backdrop-blur-sm"
    style="
      background: linear-gradient(to bottom, rgba(108, 92, 231, 0.78), rgba(72, 61, 156, 0.78));
      padding: clamp(16px, 4vw, 48px);
    "
  >
    <div class="mx-auto w-full max-w-prose">
     
       <div class="mt-4 space-y-4 text-[#dfe6e9] leading-relaxed text-[clamp(14px,3.5vw,18px)]">
        <p>
          This project is currently unavailable.
        </p>
        <p>
          We’ll share updates here in the future. Thank you for your interest and support.
        </p>
      </div>

      <div
        id="about-bottom"
        class="mt-5 text-center font-bold text-[clamp(16px,4vw,20px)]"
        style="color:#55efc4;"
      >
        Stay tuned ✨
      </div>
    </div>
  </div>
</section>
